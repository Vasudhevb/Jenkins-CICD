pipeline {
    agent any

    stages {
        stage('gitclone') {
            steps {
                 git branch: 'main', url: 'https://github.com/Vasudhevb/Terraform-.git'
                
                 
                     
                 
            }
        }
           
        stage('init') {
            steps {
                
                sh 'terraform init'
                
                
            }
        }
        
        stage('plan') {
            steps {
                
                    
                sh 'terraform plan'
                
            }
        }
        
        stage('apply') {
            steps {
            
                sh 'terraform apply -auto-approve'
            
        }
        }
    }
    

